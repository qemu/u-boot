	bool
	select MCF530x

config M53015
	bool
	select MCF5301x

config M5329
	bool
	select MCF532x

config M5373
	bool
	select MCF532x
	select MCF537x

config M54418
	bool
	select MCF5441x

# peripherals
config CF_DSPI
	bool

choice
	prompt "Target select"
	optional

config TARGET_M5235EVB
	bool "Support M5235EVB"
	select M5235

config TARGET_COBRA5272
	bool "Support cobra5272"
	select M5272

config TARGET_EB_CPU5282
	bool "Support eb_cpu5282"
	select M5282
	select HW_WATCHDOG

