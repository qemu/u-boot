	select OF_CONTROL
	select DM
        select DM_SERIAL
	bool

config MCF532x
	select OF_CONTROL
	select DM
        select DM_SERIAL
	bool

config MCF537x
	select OF_CONTROL
	select DM
        select DM_SERIAL
	bool

config MCF5441x
	select OF_CONTROL
	select DM
        select DM_SERIAL
	bool

config MCF5227x
	select OF_CONTROL
	select DM
        select DM_SERIAL
	bool

# processor type
config M5208
	bool
	select MCF520x

config M5235
	bool
	select MCF523x

config M5249
	bool
	select MCF52x2

config M5253
	bool
	select MCF52x2

config M5271
	bool
	select MCF52x2

config M5272
	bool
	select MCF52x2

config M5275
	bool
	select MCF52x2

config M5282
	bool
	select MCF52x2

