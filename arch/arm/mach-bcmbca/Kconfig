if ARCH_BCMBCA

config BCM47622
	bool "Support for Broadcom 47622 Family"
	select SYS_ARCH_TIMER
	select CPU_V7A
	select DM_SERIAL
	select PL01X_SERIAL
	select BCM63XX_HSSPI

config BCM4908
	bool "Support for Broadcom 4908 Family"
	select ARM64
	select SYS_ARCH_TIMER
	select DM_SERIAL
	select BCM6345_SERIAL
	select BCM63XX_HSSPI

